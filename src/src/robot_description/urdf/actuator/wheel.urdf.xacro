<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:macro name="wheel_xacro" params="wheel_name xyz">

    <!-- Gazebo 颜色管理 -->
        <gazebo reference="${wheel_name}_wheel_link">
            <material>Gazebo/Grey</material> <!-- 设置 Gazebo 中的材料颜色为灰色 -->
        </gazebo>

    <!-- ==================驱动轮================ -->
        <link name="${wheel_name}_wheel_link"> <!-- 定义驱动轮的链接 -->
            <visual>
                <origin xyz="0 0 0" rpy="1.57079 0 0" /> <!-- 视觉表示的原点和方向 -->
                <geometry>
                    <cylinder radius="0.032" length="0.04"/> <!-- 轮子的几何形状为半径为 0.032 米，长度为 0.04 米的圆柱 -->
                </geometry>
                <material name="yellow"> <!-- 定义视觉材料为黄色 -->
                    <color rgba="1.0 1.0 0.0 0.8"/> <!-- 颜色 RGBA，黄色，80% 不透明 -->
                </material>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="1.57079 0 0" /> <!-- 碰撞检测的原点和方向 -->
                <geometry>
                    <cylinder radius="0.032" length="0.04"/> <!-- 碰撞几何形状同样为半径为 0.032 米，长度为 0.04 米的圆柱 -->
                </geometry>
                <material name="yellow"> <!-- 定义碰撞材料为黄色 -->
                    <color rgba="1.0 1.0 0.0 0.8"/> <!-- 颜色 RGBA，黄色，80% 不透明 -->
                </material>
            </collision>

            <xacro:cylinder_inertia m="1.0" r="0.032" h="0.04" /> <!-- 轮子的转动惯量，质量为 1.0 kg，半径为 0.032 米，长度为 0.04 米 -->
        </link>

        <joint name="${wheel_name}_wheel_joint" type="continuous"> <!-- 定义连续关节 -->
            <parent link="base_link"/> <!-- 连接到基准链接 base_link -->
            <child link="${wheel_name}_wheel_link"/> <!-- 连接到驱动轮链接 -->
            <origin xyz="${xyz}"/> <!-- 设置关节的原点位置 -->
            <axis xyz="0.0 1.0 0.0"/> <!-- 关节的旋转轴为 Y 轴 -->
        </joint>

        <!-- 修改轮子的摩擦系数 -->
        <gazebo reference="${wheel_name}_wheel_link">
            <mu1 value="20.0" /> <!-- 静摩擦系数设置为 20.0 -->
            <mu2 value="20.0" /> <!-- 动摩擦系数设置为 20.0 -->
            <kp value="1000000000.0" /> <!-- 硬度系数设置为一个非常大的值 -->
            <kd value="1.0" /> <!-- 阻尼系数设置为 1.0 -->
        </gazebo>
    </xacro:macro>
</robot>
